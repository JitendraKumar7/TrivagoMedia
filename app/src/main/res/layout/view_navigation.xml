<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:showIn="@layout/activity_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_35sdp">

            <RelativeLayout
                android:id="@+id/nav_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryDark"
                android:elevation="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nav_ivAvtar"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_7sdp"
                    android:src="@drawable/ic_avtar"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="@dimen/_1sdp" />

                <TextView
                    android:id="@+id/nav_txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_27sdp"
                    android:layout_toRightOf="@+id/nav_ivAvtar"
                    android:gravity="center_horizontal"
                    android:text="User Name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/nav_txtEmailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nav_txtUserName"
                    android:layout_alignStart="@+id/nav_txtUserName"
                    android:layout_below="@+id/nav_txtUserName"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/_3sdp"
                    android:singleLine="true"
                    android:text="@string/hintUsername"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <View
                android:id="@+id/nav_devider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/nav_header"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_userAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_account"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navUserAccount"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_userBoard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_user_board"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navUserBoard"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_writeMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_message_write"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navWriteMessage"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_userMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_message"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navUserMessage"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_newMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_new_message"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navNewMessage"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_userFriends"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_friends"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navUserFriends"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_userBackOffice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_office"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navUserBackOffice"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/nav_addNewFriends"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_9sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_user"
                    android:tint="@android:color/white"
                    android:tintMode="src_atop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/navAddNewFriends"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryLight" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/navLogout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_9sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logout"
            android:tint="@android:color/white"
            android:tintMode="src_atop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_7sdp"
            android:text="@string/navLogout"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>

</RelativeLayout>
